# 数据库配置（SQLite - 最简单的选择）
DATABASE_URL=sqlite+aiosqlite:///./data/binance.db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=5

# Redis配置
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# 加密密钥（使用 cryptography.fernet.Fernet.generate_key() 生成）
ENCRYPTION_KEY=your-generated-fernet-key-here

# API服务配置
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
API_WORKERS=4

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=console  # 使用可读的控制台格式（json/console）
LOG_FILE=logs/trading.log

# WebSocket配置
WS_RECONNECT_DELAY=5
WS_PING_INTERVAL=30
WS_PING_TIMEOUT=10

# 交易限流配置
API_RATE_LIMIT_PER_USER=10
API_RATE_LIMIT_PERIOD=1

# 价格波动监控配置
PRICE_VOLATILITY_WINDOW=60
PRICE_VOLATILITY_THRESHOLD=2.0

# 订单超时配置（秒）
ORDER_TIMEOUT=300

# 开发模式
DEBUG=false
TESTING=false

# CORS配置
CORS_ORIGINS=["http://localhost:3000"]
CORS_ALLOW_CREDENTIALS=true

